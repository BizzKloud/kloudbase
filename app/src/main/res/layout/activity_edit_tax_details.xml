<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.smahadik.kloudbase.EditTaxDetails">


    <LinearLayout
    android:id="@+id/name"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:weightSum="11"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/taxNameTextView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_weight="4"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="Name"
        android:textColor="#848484"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/taxNameEditText"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="7"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
        android:layout_marginStart="10dp"
        android:textColor="@android:color/black"
        android:textSize="18sp" />
</LinearLayout>


    <LinearLayout
        android:id="@+id/desp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:weightSum="11"
        app:layout_constraintTop_toBottomOf="@+id/name">

        <TextView
            android:id="@+id/taxDespTextView"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="Description"
            android:textColor="#848484"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/taxDespEditText"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="7"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
            android:layout_marginStart="10dp"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/per"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:weightSum="11"
        app:layout_constraintTop_toBottomOf="@+id/desp">

        <TextView
            android:id="@+id/taxPerTextView"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="Percentage"
            android:textColor="#848484"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/taxPerEditText"
            android:inputType="number"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="7"
            android:layout_marginStart="10dp"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:weightSum="9"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/Cancel"
            style="@style/cancel_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.3"
            android:onClick="cancel"
            android:text="Cancel"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.4"
            />

        <Button
            android:id="@+id/Save"
            style="@style/save_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.3"
            android:onClick="save"
            android:text="Save"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/progressBarHolder"
        android:animateLayoutChanges="true"
        android:visibility="gone"
        android:alpha="0.8"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" >

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:indeterminateTint="#ff8800"
            android:translationZ="2dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="center"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/loadingMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="400dp"
            android:text="Updating Changes"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/progressBar"
            />

    </FrameLayout>



</android.support.constraint.ConstraintLayout>


