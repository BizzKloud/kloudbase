<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/libre_baskerville</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="spinner_style">
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>

    <style name="password_style" >
        <item name="android:background">@drawable/gradient_password</item>
    </style>

    <style name="button_style" >
        <item name="android:background">@drawable/gradient_login</item>
        <item name="android:colorBackground">#ffff8800</item>
    </style>

    <style name="titlebar_style" >
        <item name="android:background">@android:color/holo_orange_dark</item>
    </style>


</resources>
